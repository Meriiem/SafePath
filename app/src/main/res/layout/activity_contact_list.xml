<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar with title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Trusted Contacts"
        android:titleTextColor="#FFFFFF"
        android:background="@color/colorPrimary" />

    <!-- RecyclerView for displaying the list of contacts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp" />

    <!-- Button to add new contact -->
    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Trusted Contact"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"/>

    <!-- Emergency alert button -->
    <Button
        android:id="@+id/btn_emergency_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Emergency Alert"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="16dp" />
</LinearLayout>
