<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded Corners -->
    <corners android:radius="16dp" />

    <!-- Gradient Background (soft pink to soft blue) -->
    <gradient
        android:startColor="@color/soft_pink"
        android:endColor="@color/soft_blue"
        android:angle="45" />

    <!-- Border/Stroke for a soft outline -->
    <stroke
        android:width="1dp"
        android:color="@color/soft_beige" />

    <!-- Padding for internal spacing -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>
